<div class="card card-body">
    <h3>Edit Posts</h3>
    <form action="/posts/{{post._id}}?_method=PUT " method="POST" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group mt-4">
            <label for="cover_image">Cover Image</label>
            <input type="file" name="image" id="image" class="form-control" required >
        </div>
        <img id="imgPost" class="rounded mx-auto d-block w-30 h-50" src="{{post.image}}" alt="">
        <div class="form-group mt-4">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Enter Title" value="{{post.title}}" required>
        </div>
        <div class="form-group mt-4">
            <label for="text">Body</label>
            <textarea name="text" id="text" cols="30" rows="10" class="form-control" required>{{post.text}}</textarea>
        </div>
        
            <button type="submit" class="btn btn-primary mt-4 mb-2 btn-create">Save</button> 
    </form>
    
</div>
<script>
    //change image
    document.getElementById('image').addEventListener('change', function(e) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('imgPost').src = e.target.result;
        };
        reader.readAsDataURL(e.target.files[0]);
    });

    

</script>