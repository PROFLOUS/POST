{{#each posts}}
<div class="card  card-body mb-4" >
    <div class="row">
        <input type="hidden" name="idD" value="{{_id}}">
        <div class="col-sm-3">
            <img  src="{{image}}" class="card-img-top h-100 img-detail mx-auto" alt="...">
        </div>
        <div class="col-sm-9">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card_body card-text">
                    {{text}}
                </p>
            </div>
            <div class="d-flex ml-3 mt-3 justify-content-between">
                <div class="d-flex">
                    <p class="material-icons material-symbols-outlined">
                    visibility
                    </p>
                    <span>{{views}}</span></div>    
                <label><input id="{{_id}}" class="check" type="checkbox"><span id="{{_id}}" class="material-icons wish material-symbols-outlined">favorite</span></label>
            </div>
        </div>
    </div>
</div>
{{/each}}